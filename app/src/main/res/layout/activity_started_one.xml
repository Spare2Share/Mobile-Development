<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.StartedOneActivity">

    <ImageView
        android:id="@+id/shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/shape" />

    <ImageView
        android:id="@+id/vector"
        android:layout_width="275dp"
        android:layout_height="233dp"
        android:layout_below="@id/shape"
        android:layout_centerHorizontal="true"
        android:src="@drawable/vector1" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vector"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="@string/welcome_to_spare2share"
        android:textColor="@color/black_100"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/description_started_one"
        android:textColor="@color/black_100"
        android:gravity="center"
        android:paddingHorizontal="65dp"
        android:textSize="13sp" />

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="325dp"
        android:layout_below="@id/tvDesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_semi_bold"
        android:background="@drawable/button_shape"/>
</RelativeLayout>